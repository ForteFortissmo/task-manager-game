function GetInput(){
	uKeyHold = keyboard_check(ord("W"));
	uKeyPressed = keyboard_check_pressed(ord("W"));
	
	dKeyHold = keyboard_check(ord("S"));
	dKeyPressed = keyboard_check_pressed(ord("S"));
	
	rKeyHold = keyboard_check(ord("D"));
	rKeyPressed = keyboard_check_pressed(ord("D"));
	
	lKeyHold = keyboard_check(ord("A"));
	lKeyPressed = keyboard_check_pressed(ord("A"));
	
	

}
